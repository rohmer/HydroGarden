{
        // See https://go.microsoft.com/fwlink/?LinkId=733558
        // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "make",
                        "type": "shell",
                        "command": "/usr/bin/make",
                        "args": [
                                "-j8"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "problemMatcher": [
                                "$gcc"
                        ]
                },
                {
                        "label": "make clean",
                        "type": "shell",
                        "command": "/usr/bin/make",
                        "args": [
                                "clean"
                        ],
                        "group": "none"
                }
        ]
}